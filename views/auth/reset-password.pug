extends ../layout/index

block contenido
    
    div
        div
            a(href="#") 
                img(class="h-40 mx-auto" src="/img/logo.png" alt="")
            h2.text-center.text-2xl.font-extrabold= pagina
        
            if errores
                div(class="max-w-md mx-auto my-10")
                   each error in errores
                        p.bg-red-600.rounded.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold=error.msg

        div.mt-8.mx-auto.max-w-md
            .bg-white.py-8.px-4.shadow
                form.space-y-5(method="POST" noValidate)
                    input(type="hidden" name="_csrf" value= csrfToken)
                    div 
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="password") Nuevo password
                        input#email.w-full.px-3.py-4.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Pon tu nuevo password" type="password" name="password")
                    

                    input(class="w-full bg-orange-600 hover:bg-orange-700 text-white font-bold py-3 cursor-pointer" type="submit" value="Guardar Password")