extends ../layout/admin

block contenido
    h2(class="text-2xl font-extrabold text-center my-10")=pagina 

    a(href="/mis-emprendimientos" class="rounded py-2 px-10 bg-orange-600 hover:bg-orange-700 text-sm font-bold text-center text-white uppercase my-5 inline-block w-full sm:w-auto") Volver

    div(class="mx-auto max-w-6xl bg-white shadow")
        
        if mensajes.length
            ul
                each mensaje in mensajes
                    li(class="border-gray-200 border-b p-5")
                        p(class="font-bold text-gray-800") Nombre: 
                            span(class="font-nomral")= mensaje.usuario.nombre
                        
                        p(class="font-bold text-gray-800") Email: 
                            span(class="font-nomral")= mensaje.usuario.email
                        
                        p(class="font-bold text-gray-800") Mensaje: 
                            span(class="font-nomral")= mensaje.mensaje
                        
                        p(class="font-bold text-gray-800") Enviado: 
                            span(class="font-nomral")= formatearFecha(mensaje.createdAt) 
        else
            p(class="text-center text-gray-600 p-5") No hay mensajes