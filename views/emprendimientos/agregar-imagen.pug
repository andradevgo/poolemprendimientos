extends ../layout/admin

block  styles
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/dropzone/5.9.3/dropzone.css")
    meta(name="csrf-token" content= csrfToken)
block contenido
    div
        a(href="#") 
            img(class="h-40 mx-auto" src="/img/logo.png" alt="")
        h2.text-center.text-2xl.font-extrabold= pagina

        
        div(class="bg-white shadow py-8 px-4 rounded mx-auto max-w-4xl my-10 md:px-10")
            form(id="imagen" class="dropzone border-dashed border-2 w-full min:h-96 h-auto rounded flex-col justify-center items-center" method="POST" action=`/emprendimientos/agregar-imagen/${emprendimiento.id}`)
                input(type="hidden" name="_csrf" value= csrfToken)

            button(id="publicar" class="mt-5 w-full py-3 bg-orange-600 hover:bg-orange-700 rounded text-white font-bold uppercase cursor-pointer" type="button") Publicar Emprendimiento

block scripts
    script(src="/js/agregarImagen.js") 