header.bg-amber-600.p-4
    .container.mx-auto.flex.justify-between.items-center
        a(href="/") 
            img(class="h-16 mx-auto" src="/img/logo.png" alt="")

        nav(class="my-5 text-sm md:flex md:items-center md:gap-3 font-bold text-white hidden")
            a(href="/auth/registro") Crear Cuenta
            a(href="/auth/login") Iniciar Sesión

div(class="bg-orange-700 py-5 hidden lg:block")
    div(class="container mx-auto flex justify-between")
        nav(class="flex gap-4 items-center")
            a(href="/categorias/1" class="text-sm font-bold uppercase text-white") Productos
            a(href="/categorias/2" class="text-sm font-bold uppercase text-white") Servicios
            a(href="/categorias/3" class="text-sm font-bold uppercase text-white") Eventos
            a(href="/categorias/4" class="text-sm font-bold uppercase text-white") Apoya y gana
        
        form(action="/buscador" method="POST" class="flex gap-3 items-center")
            input(type="hidden" name="_csrf" value= csrfToken)
            label(for="termino" class="text-sm uppercase font-bold text-white") Búsqueda
            input(type="text" id="termino" name="termino" placeholder="Buscar emprendimientos" class="p-2 rounded-lg shadow text-sm")
            input(type="submit" class="bg-orange-800 hover:bg-orange-400 rounded-lg text-white uppercase font-bold p-2 cursor-pointer text-sm" value="Buscar")